<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="#1D1E33"
    android:layout_marginBottom="8dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/flagImageView"
        android:layout_width="58dp"
        android:layout_height="40dp"
        android:layout_marginEnd="12dp"
        android:contentDescription="Flag"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/countryNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Country Name"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:maxLines="1"
        android:ellipsize="end" />

    <ImageButton
        android:id="@+id/editCountryButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:backgroundTint="#FFA500"
        android:contentDescription="Edit Country"
        android:src="@android:drawable/ic_menu_edit"
        app:tint="#FFA500" />

    <ImageButton
        android:id="@+id/deleteCountryButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="#E50914"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_delete"
        android:contentDescription="Delete Country"
        app:tint="#E50914" />
</LinearLayout>
