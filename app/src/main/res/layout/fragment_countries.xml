<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1A1B2E">
    <!-- Heading -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/countriessUserPageLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Countries List"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:layout_marginBottom="4dp" />

        <View
            android:layout_width="230dp"
            android:layout_height="3dp"
            android:background="#E50914"
            android:layout_marginBottom="12dp" />
    </LinearLayout>

    <!-- Search Bar -->
    <EditText
        android:id="@+id/CountriesUserSearchEditText"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Search channels..."
        android:background="@drawable/search_background"
        android:textColor="#FFFFFF"
        android:textColorHint="#AAAAAA"
        android:drawableStart="@android:drawable/ic_menu_search"
        android:drawablePadding="8dp"
        android:paddingHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_countries"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:clipToPadding="false" />

</LinearLayout>
